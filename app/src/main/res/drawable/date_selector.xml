<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 배경색은 연한 회색으로 설정 -->
    <solid android:color="#F5F5F5"/>

    <!-- 테두리는 부드러운 회색 선으로 설정 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- 모서리를 둥글게 처리 -->
    <corners android:radius="8dp" />

    <!-- 내부 패딩 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
